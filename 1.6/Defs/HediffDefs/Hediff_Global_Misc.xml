<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef>
    <defName>HealingAura</defName>
    <label>healing aura</label>
    <labelNoun>a healing aura</labelNoun>
    <description>A healing aura.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <naturalHealingFactor>3</naturalHealingFactor>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears"></li>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
      <li Class="HediffCompProperties_GiveHediffsInRange">
        <range>5</range>
        <mote>Mote_HealingAura</mote>
        <hideMoteWhenNotDrafted>false</hideMoteWhenNotDrafted>
        <targetingParameters>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetColonists>true</onlyTargetColonists>
        </targetingParameters>
        <hediff>HealingAuraEffect</hediff>
      </li>
    </comps>
    <isBad>false</isBad>
  </HediffDef>

  <HediffDef>
    <defName>HealingAuraEffect</defName>
    <label>healing aura</label>
    <labelNoun>a healing aura</labelNoun>
    <description>The healing aura from another pawn.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <stages>
      <li>
        <naturalHealingFactor>3</naturalHealingFactor>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears"></li>
    </comps>
    <isBad>false</isBad>
  </HediffDef>

</Defs>