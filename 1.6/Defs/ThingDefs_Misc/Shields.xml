<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
        <defName>Bulwark_Shield</defName>
        <label>blessed shield</label>
        <description>A greatshield wielded by bulwarks.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Shield/BulwarkShield/BulwarkShield</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <costStuffCount>50</costStuffCount>
        <recipeMaker>
			<researchPrerequisite>Smithing</researchPrerequisite>
		</recipeMaker>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.5</Flammability>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.7</ArmorRating_Blunt>
            <ArmorRating_Heat>0.75</ArmorRating_Heat>
            <WorkToMake>900</WorkToMake>
            <Mass>2</Mass>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.2</MoveSpeed>
        </equippedStatOffsets>
        <thingCategories>            
            <li>ApparelArmor</li>
        </thingCategories>
        <equippedStatOffsets>
             <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
            <MeleeDodgeChance>-1</MeleeDodgeChance>
        </equippedStatOffsets>
        <thingClass>VEF.Apparels.Apparel_Shield</thingClass>
        <apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		<bodyPartGroups>
			<li>LeftHand</li>
			<li>Arms</li>
		</bodyPartGroups>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
        <comps>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
        <equippedAngleOffset>-30</equippedAngleOffset>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>12</power>
                <cooldownTime>2.2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="VEF.Apparels.CompProperties_Shield">
                <shieldTags>
                    <li>Bulwark</li>
                </shieldTags>
                <useDeflectMetalEffect>false</useDeflectMetalEffect>
                <coveredBodyPartGroups>
                    <li>Neck</li>
                    <li>Torso</li>
                    <li>Arms</li>
					<li>Legs</li>
                    <li>Hands</li>
                </coveredBodyPartGroups>
                <offHandGraphicData>
                    <texPath>Things/Item/Equipment/Shield/BulwarkShield/BulwarkShield</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.6</drawSize>
                </offHandGraphicData>
                <offHandHoldOffset>
                    <northDefault>
                        <offset>(-0.05, 0, 0.2)</offset>
                        <behind>true</behind>
                    </northDefault>
                    <east>
                        <offset>(-0.15, 0, 0.2)</offset>
                        <behind>true</behind>
                    </east>
                    <south>
                        <offset>(0.2, -0.04, 0.2)</offset>
                    </south>
                    <west>
                        <offset>(0.15, 0, 0.2)</offset>
                    </west>
                </offHandHoldOffset>
            </li>
        </comps>
    </ThingDef>
</Defs>
