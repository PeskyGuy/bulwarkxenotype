<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<FactionDef ParentName="BulwarkFactionBase">
    <defName>BulwarksCivil</defName>
    <label>civil bulwarks</label>
    <description>These bulwarks have been on this planet for a while, long enough to not know how they got here.</description>
    <colorSpectrum>
      <li>(0.35, 0.30, 0.60)</li>
      <li>(0.45, 0.35, 0.75)</li>
    </colorSpectrum>
    <classicIdeo>true</classicIdeo>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>10</configurationListOrderPriority>
    <melaninRange>0~0.7</melaninRange>
    <xenotypeSet Inherit="False">
      <xenotypeChances>
        <Bulwark>999</Bulwark>
      </xenotypeChances>
    </xenotypeSet>
  </FactionDef>


  <FactionDef ParentName="FactionBase" Name="BulwarkFactionBase" Abstract="True">
    <pawnSingular>citizen</pawnSingular>
    <pawnsPlural>citizens</pawnsPlural>
    <categoryTag>Medieval</categoryTag>
    <listOrderPriority>30</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>guardian</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/BulwarkVillage</factionIconPath>
    <techLevel>Medieval</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <allowedCultures><li>Rustican</li></allowedCultures>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <structureMemeWeights>
      <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
      <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">2</Structure_TheistAbstract>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">3</Structure_Archist>
      <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
      <Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginIslamic>
      <Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginHindu>
      <Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginBuddhist>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
        <commonality>0.95</commonality>
      </li>
    </backstoryFilters>

           <!-- Groups -->

    <caravanTraderKinds>
      <li>Caravan_Bulwark_BulkGoods</li>
      <li>Caravan_Bulwark_CombatSupplier</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Bulwark_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Bulwark_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>

        <!-- Group Makers -->

    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Bulwark_Peasant>6</Bulwark_Peasant>
          <Bulwark_Soldier>15</Bulwark_Soldier>
          <Bulwark_Guardian>10</Bulwark_Guardian>
          <Bulwark_Noble>2</Bulwark_Noble>
          <Bulwark_Archer>5</Bulwark_Archer>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Bulwark_Peasant>5</Bulwark_Peasant>
          <Villager_Child MayRequire="Ludeon.RimWorld.Biotech">10</Villager_Child>
          <Bulwark_Soldier>10</Bulwark_Soldier>
          <Bulwark_Guardian>10</Bulwark_Guardian>
          <Bulwark_Archer>10</Bulwark_Archer>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Bulwark_Noble>1</Bulwark_Noble>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
          <Bulwark_Peasant>2</Bulwark_Peasant>
          <Bulwark_Soldier>10</Bulwark_Soldier>
          <Bulwark_Guardian>7</Bulwark_Guardian>
          <Bulwark_Archer>10</Bulwark_Archer>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Bulwark_Peasant>10</Bulwark_Peasant>
          <Bulwark_Soldier>15</Bulwark_Soldier>
          <Bulwark_Guardian>15</Bulwark_Guardian>
          <Bulwark_Noble>10</Bulwark_Noble>
          <Bulwark_Archer>10</Bulwark_Archer>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Miners</kindDef>
        <commonality>1</commonality>
        <options>
          <Miner>1</Miner>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Hunters</kindDef>
        <commonality>1</commonality>
        <options>
          <Hunter>1</Hunter>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Loggers</kindDef>
        <commonality>1</commonality>
        <options>
          <Logger>1</Logger>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Farmers</kindDef>
        <commonality>1</commonality>
        <options>
          <Farmer>1</Farmer>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>

