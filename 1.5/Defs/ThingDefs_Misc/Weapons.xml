<?xml version="1.0" encoding="utf-8"?>
<Defs>
 <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>Bulwark_Halberd</defName>
    <label>blessed halberd</label>
    <description>A large polearm created to be light but deadly in the hands of a Bulwark.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/BulwarkHalberd</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>NeolithicMeleeAdvanced</li>
      <li>MedievalMeleeAdvanced</li>
      <li>BulwarkGuardian</li>
    </weaponTags>
    <weaponClasses>
      <li>Neolithic</li>
    </weaponClasses>
    <costStuffCount>80</costStuffCount>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>2</Mass>
      <VEF_MeleeWeaponRange>2</VEF_MeleeWeaponRange>
    </statBases>
    <equippedAngleOffset>-25</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>20</power>
        <armorPenetration>0.60</armorPenetration>
        <cooldownTime>2.6</cooldownTime>
      </li>
      <li>
        <label>Blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>25</power>
        <armorPenetration>0.60</armorPenetration>
        <cooldownTime>1.8</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>330</displayPriority>
    </recipeMaker>
    <modExtensions>
	    <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
      </li>
    </modExtensions>
  </ThingDef>
</Defs>
